<h1>Burger Tracker</h1>

<div class="mainContainer">

  <div class="leftCollumn">

    <img id="burgerPic" src="/assets/images/burger.png">

    <h5>Ready to eat!</h5>

    <ul class="collection">
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devoured=false}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="rightCollumn">

    <img id="devouredPic" src="/assets/images/devoured.png">

    <h5>Devoured!</h5>

    <ul class="collection">
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block devoured=true}}
        {{/if}}
      {{/each}}
    </ul>
  </div>

  <div class="row">

    <form class="create-form col s12">

      <div class="row">

        <div class="input-field col s2"></div>

        <div class="input-field col s6">

          <input id="burgerDescription" type="text" class="validate">

        </div>

        <div class="input-field col s3">
          <button class="btn waves-effect waves-light" type="submit">Add Burger
          </button>
        </div>

      </div>

    </form>

  </div>

</div>
