<h1>Eating Burgers</h1>

<form class="create-form">

  <div class="form-group">
    <label for="burgerDescription">New Burger Description:</label>

    <input type="text" id="burgerDescription" name="name">

    <button type="submit">Add Burger</button>
  </div>

</form>

<div class="mainContainer">

  <div class="leftCollumn">

    <img id="burgerPic" src="/assets/images/burger.png">

    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devoured=false}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="rightCollumn">

    <img id="devouredPic" src="/assets/images/devoured.png">

    <ul>
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block devoured=true}}
        {{/if}}
      {{/each}}
    </ul>
  </div>

</div>

</div>