<h1>Burgers</h1>

<h2>Yummy!</h2>

<div class="burgerPicture">picture</div>

<div>
  <div>
    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devoured=false}}
        {{/unless}}
      {{/each}}
    </ul>
  <div>

  <div>
    <ul>
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block sleep=true}}
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burgerDescription">description:</label>

    <input type="text" id="burgerDescription" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>